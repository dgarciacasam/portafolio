---
import TechPill from './TechPill.astro'
import PlanetIcon from './icons/PlanetIcon.astro'
import RocketIcon from './icons/RocketIcon.astro'
import type { ProjectCardProps } from '../utils/types'
import LinkIcon from './icons/LinkIcon.astro'

const { title, description, link, githubLink, stack, icon} = Astro.props as ProjectCardProps
    
---

<article class="flex flex-col flex-wrap justify-between border gap-2 border-white/30 rounded-xl p-4 ">
    <div class="flex justify-between items-center">
    <h3 class={(link !== "") ? 'flex space-x-1 hover:underline hover:decoration-dashed hover:decoration-white/50 hover:underline-offset-4' : 'flex space-x-1' }>   
        { icon === "RocketIcon" && <RocketIcon/> }
        { icon === "PlanetIcon" && <PlanetIcon />}
        { icon === "LinkIcon" && <LinkIcon />}
        <a href={link} target="_blank" class={(link !== "")? `font-bold` : `font-bold pointer-events-none` }>{title}</a>          
    </h3>
    <a href={githubLink} target="_blank" class="p-1 rounded text-white/70 hover:text-white hover:bg-white/10 transition">
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
    </a>
</div>
    <p class="mt-1 text-white/70 text-sm text-pretty">{description}</p>
    <div class="flex flex-wrap items-center gap-2 mt-2">
    {stack.map(tech => (
        <TechPill name={tech}/>
    ))}
    </div>
</article>